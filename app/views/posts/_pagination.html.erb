<% if posts.total_count > 12 %>
  <% if (posts.offset_value + 1) != (posts.offset_value + posts.length) %>
    <%= posts.offset_value + 1 %> - <%= posts.offset_value + posts.length %> / <%= @posts.total_count %>件
  <% elsif (posts.offset_value + 1) == (posts.offset_value + posts.length) %>
    <%= posts.offset_value + 1 %> / <%= posts.total_count %>件
  <% end %>
<% end %>