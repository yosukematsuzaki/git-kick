<div class="contents mx-5 clearfix">
  <p class="h4 mb-5 font-weight-bold lines-on-sides"><span>「#<%= @tag.name %>」の新着一覧</span></p>
  <%= render :partial => "post", :collection => @posts %>
</div>

<ul class="list-inline mx-auto text-center" style="width:400px;">
  <li class="list-inline-item">
    <%= paginate @posts %>
  </li>
  <li class="list-inline-item">
    <%= render :partial => "pagination", :locals => { posts: @posts } %>
  </li>
</ul>